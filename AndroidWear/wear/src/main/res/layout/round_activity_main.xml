<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tommy.androidwear.MainActivity"
    tools:deviceIds="wear_round"
    android:keepScreenOn="true">

    <EditText
        android:id="@+id/durationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/EnterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="anonymous"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/generateFile"
        android:layout_alignBottom="@+id/generateFile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:onClick="true"
        android:text="Start" />

    <Button
        android:id="@+id/generateFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnterName"
        android:layout_toEndOf="@+id/startButton"
        android:onClick="true"
        android:text="File" />

    <Button
        android:id="@+id/wipeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true"

        android:text="clear" />
</RelativeLayout>
